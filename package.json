{
  "name": "contract-playground",
  "version": "0.1.0",
  "description": "A Hardhat project with TypeScript for playing around with smart contracts.",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "testpan": "npx hardhat test ./scripts/test/local/PancakeSwapDriver.test.ts",
    "testsec": "npx hardhat test ./scripts/test/local/SecondaryVault.test.ts",
    "teststa": "npx hardhat test ./scripts/test/local/StargateDriver.test.ts",
    "localhost-testpan": "npx hardhat test --network localhost ./scripts/test/localhost/PancakeSwapDriver.test.ts",
    "localhost-testsec": "npx hardhat test --network localhost ./scripts/test/localhost/SecondaryVault.test.ts",
    "localhost-teststa": "npx hardhat test --network localhost ./scripts/test/localhost/StargateDriver.test.ts",
    "testnet-test": "npx hardhat test ./scripts/test/testnet/Testnet.test.ts",
    "localhost-deploy": "npx hardhat run --network localhost ./scripts/deploy/deployLocalhost.ts",
    "deploy-goerli": "npx hardhat run --network goerli ./scripts/deploy/deployGoerli.ts",
    "deploy-bsctest": "npx hardhat run --network bsctest ./scripts/deploy/deployBsc.ts",
    "deploy-fantom": "npx hardhat run --network fantom ./scripts/deploy/deployFantom.ts",
    "deploy-tokens": "npx hardhat run --network arbitrum ./scripts/deploy/deployTokens.ts",
    "init-mozaic": "npx hardhat run ./scripts/deploy/initMozaic.ts",
    "mytest": "npx hardhat run ./scripts/test/mytest.ts",
    "verify-bsctest": "npx hardhat verify --network bsctest",
    "verify-fantom": "npx hardhat verify --network fantom",
    "coverage": "yarn build && npx hardhat coverage --temp artifacts --network coverage",
    "postinstall": "yarn compile",
    "lint": "gts lint && npx hardhat check",
    "fix": "gts fix",
    "pretest": "yarn compile",
    "posttest": "yarn lint",
    "node:start": "npx hardhat node",
    "node:run": "npx hardhat run --network localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erhant/contract-playground.git"
  },
  "author": "erhant",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erhant/contract-playground/issues"
  },
  "devDependencies": {
    "@layerzerolabs/solidity-examples": "^0.0.10",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@openzeppelin/contracts": "^4.7.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.2.18",
    "@types/jest": "^29.4.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.14.9",
    "chai": "^4.3.4",
    "dotenv": "^9.0.2",
    "ethers": "^5.1.4",
    "gts": "^3.1.0",
    "hardhat": "^2.10.0",
    "hardhat-change-network": "^0.0.7",
    "hardhat-contract-sizer": "^2.8.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.2.4"
  }
}
