{
  "name": "contract-playground",
  "version": "0.1.0",
  "description": "A Hardhat project with TypeScript for playing around with smart contracts.",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "testnet": "npx hardhat test ./test/ontestnet/ExecuteActions.test.ts",
    "testpan": "npx hardhat test ./test/PancakeSwapDriver.test.ts",
    "testsec": "npx hardhat test ./test/SecondaryVault.test.ts",
    "testvault": "npx hardhat test ./test/SecondaryVault.test.ts",
    "teststa": "npx hardhat test ./test/StargateDriver.test.ts",
    "coverage": "yarn build && npx hardhat coverage --temp artifacts --network coverage",
    "postinstall": "yarn compile",
    "lint": "gts lint && npx hardhat check",
    "fix": "gts fix",
    "pretest": "yarn compile",
    "posttest": "yarn lint",
    "node:start": "npx hardhat node",
    "node:run": "npx hardhat run --network localhost "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erhant/contract-playground.git"
  },
  "author": "erhant",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erhant/contract-playground/issues"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@openzeppelin/contracts": "^4.7.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.2.18",
    "@types/jest": "^29.4.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.14.9",
    "chai": "^4.3.4",
    "dotenv": "^9.0.2",
    "ethers": "^5.1.4",
    "gts": "^3.1.0",
    "hardhat": "^2.10.0",
    "hardhat-contract-sizer": "^2.8.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.2.4"
  }
}
